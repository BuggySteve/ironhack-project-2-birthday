<h1>USER DASHBOARD</h1>

<div>
  <div class="card party-card" style="width: 18rem;">
    <div class="card-body">
      <h3 class="card-title">Profile:</h3>
    </div>
    <div class="card-body flex">
      <h5 class="card-title">Name: {{ currentUser.first_name }} {{ currentUser.last_name }}</h5>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Username: {{ currentUser.username }}</li>
      <li class="list-group-item">Email adress: {{ currentUser.email }}</li>
      <li class="list-group-item">Date of birth: {{ currentUser.date_of_birth }} </li>
    </ul>
    <div class="card-body">
      <a href="/user/edit?id={{currentUser._id}}" class="card-link">Edit</a>
    </div>
  </div>
</div>